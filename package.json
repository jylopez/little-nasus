{
  "name": "cross-bom",
  "version": "1.0.0",
  "private": true,
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "watch": "node develop.js",
    "productionify": "npm run prod:bundle && npm run prod:sass",
    "prod:bundle": "npm run prod:bundle-nas",
    "prod:bundle-nas": "NODE_ENV=production browserify src/js/bundles/NasBundle.js -t babelify -g envlocalify -g uglifyify > public/js/NasBundle.js",
    "prod:sass": "npm run prod:sass-nas ",
    "prod:sass-nas": "NODE_ENV=production node-sass src/css/root-nas.scss public/css/root-nas.css --output-style=compressed"
  },
  "dependencies": {
    "babel-register": "^6.22.0",
    "body-parser": "^1.15.2",
    "browser-sync": "^2.27.10",
    "compression": "^1.7.4",
    "dotenv": "^2.0.0",
    "ejs": "^2.6.1",
    "express": "^4.14.0",
    "immutable": "^4.0.0-rc.12",
    "method-override": "^3.0.0",
    "node-sass": "^4.13.1",
    "node-watch": "^0.6.3",
    "react": "^16.8.0",
    "react-dom": "^16.8.0",
    "react-redux": "^5.0.7",
    "react-router-dom": "^4.3.1",
    "react-router-redux": "^4.0.8",
    "redux": "^4.0.5",
    "redux-thunk": "^2.3.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-plugin-react-transform": "^3.0.0",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babelify": "^7.3.0",
    "envlocalify": "^1.1.1",
    "livereactload": "^3.3.0",
    "nodemon": "^1.18.9",
    "react-proxy": "^1.1.8",
    "uglifyify": "^3.0.4",
    "watchify": "^3.9.0"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "react",
            "es2015"
          ]
        }
      ]
    ]
  }
}
